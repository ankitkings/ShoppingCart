<p style="color: green; font-weight: bold; margin-bottom: 20px;"><%= notice %></p>

<div style="border: 1px solid #ddd; border-radius: 8px; padding: 20px; max-width: 600px; margin: 0 auto; background-color: #fefefe; box-shadow: 2px 2px 10px rgba(0,0,0,0.1);">

  <h2 style="font-size: 28px; color: #2c3e50; margin-bottom: 10px;"><%= @product.title %></h2>

  <p style="font-size: 16px; color: #555; margin-bottom: 15px;"><%= @product.description %></p>

  <p style="font-size: 18px; font-weight: bold; color: #27ae60; margin-bottom: 20px;">
    <strong>Price:</strong> <%= number_to_currency(@product.price) %>
  </p>

  <% if @product.image.attached? %>
    <%= image_tag @product.image, style: "max-width: 100%; border-radius: 4px; margin-bottom: 20px;" %>
  <% else %>
    <p style="color: #888; font-style: italic;">No image uploaded.</p>
  <% end %>

  <% if user_signed_in? %>
    <%if current_user.admin?%>
      <div style="display: flex; justify-content: center; gap: 20px; margin-top: 30px;">
        <%= button_to "Edit", edit_product_path(@product), method: :get,
              style: "padding: 10px 16px; background-color: #3498db; color: white; border: none; border-radius: 5px; font-size: 16px; cursor: pointer;" %>
        <%= button_to "Back", products_path, method: :get, style: "padding: 10px 20px; margin-left: 10px; background-color: #2ecc71; color: white; border: none; border-radius: 4px; font-size: 16px; cursor: pointer;" %>
      </div>
    <%else%>
      <div style="display: flex; justify-content: center; gap: 20px; margin-top: 30px;">
        <%= button_to "Add to Cart", add_to_cart_path(@product), method: :post,
              style: "padding: 10px 16px; background-color: #3498db; color: white; border: none; border-radius: 5px; font-size: 16px; cursor: pointer;" %>
        <%= button_to "Back", products_path, method: :get, style: "padding: 10px 20px; margin-left: 10px; background-color: #2ecc71; color: white; border: none; border-radius: 4px; font-size: 16px; cursor: pointer;" %>
      </div>
    <%end%>
  <% else %>
    <%= link_to "Sign in to buy", new_user_session_path,
          style: "padding: 10px 16px; background-color: #e67e22; color: white; text-decoration: none; border-radius: 5px; font-size: 16px;" %>
  <% end %>

</div>
