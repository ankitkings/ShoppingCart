<p style="color: green; font-weight: bold; margin-bottom: 20px;"><%= notice %></p>

<% content_for :title, "Products" %>

<!-- Header and Buttons -->
<div style="display: flex; justify-content: space-between; align-items: center; margin-top: 30px; margin-bottom: 20px;">
  <h1 style="font-size: 32px; margin: 0; color: #2c3e50;">Products</h1>
  <div style="display: flex; justify-content: right; flex-wrap: wrap; gap: 20px; margin-bottom: 30px;">
    <%= form_with url: products_path, method: :get, local: true, style: "display: flex; gap: 10px; flex-wrap: wrap;" do |f| %>
    <label style="font-size: 18px; margin-right: 10px; color: #2c3e50;">Filter by Category:</label>
    <%= select_tag :category,
          options_for_select(@categories.map { |c| [c.name.titleize, c.id] }, @selected_category),
          prompt: "All Categories",
          style: "padding: 10px; border-radius: 5px; font-size: 16px;" %>

    <%= submit_tag "Filter", style: "margin-left: 10px; padding: 10px 16px; background-color: #3498db; color: white; border: none; border-radius: 5px;" %>
  <% end %>
  </div>
  <div style="display: flex; gap: 10px;">
    <% if current_user.admin?%>
      <%= button_to "New Product", new_product_path, method: :get,
            style: "padding: 10px 16px; background-color: #3498db; color: white; border: none; border-radius: 5px; font-size: 16px; cursor: pointer;" %>
      <%= button_to "Orders", orders_path, method: :get,
            style: "padding: 10px 16px; background-color: #2ecc71; color: white; border: none; border-radius: 5px; font-size: 16px; cursor: pointer;" %>
    <%else%>
      <%= button_to "My Cart", carts_show_path, method: :get,
            style: "padding: 10px 16px; background-color: #3498db; color: white; border: none; border-radius: 5px; font-size: 16px; cursor: pointer;" %>
      <%= button_to "My Orders", orders_path, method: :get,
            style: "padding: 10px 16px; background-color: #2ecc71; color: white; border: none; border-radius: 5px; font-size: 16px; cursor: pointer;" %>

    <%end%>
  </div>
</div>

<!-- Product Grid -->
<div id="products" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 20px;">
  <% @products.each do |product| %>
    <div style="border: 1px solid #ddd; border-radius: 8px; padding: 15px; background-color: #f9f9f9; box-shadow: 2px 2px 8px rgba(0,0,0,0.1); transition: transform 0.3s ease;">
      <h3 style="margin-top: 0;">
        <%= link_to product.title, product, style: "text-decoration: none; color: #2c3e50;" %>
      </h3>

      <% if product.image.attached? %>
        <%= image_tag product.image, style: "width: 100%; height: auto; border-radius: 4px; margin-bottom: 10px;" %>
      <% end %>

      <p style="font-size: 18px; color: #27ae60; font-weight: bold;"><%= number_to_currency(product.price) %></p>
      <% if current_user.admin?%>
        <p style="font-size: 18px; color: #555555; font-weight: bold;">Stock: <%= product.stock %></p> 
      <%end%>
      <p style="margin-top: 10px;">
        <%= link_to "Show this product", product, style: "display: inline-block; padding: 8px 12px; background-color: #3498db; color: white; text-decoration: none; border-radius: 4px;" %>
      </p>
      <p>
        <% if current_user.admin?%>
          <%= button_to "Delete", product_path(product), method: :delete,
          style: "padding: 10px 16px; background-color: #3fff3f; color: white; border: none; border-radius: 5px; font-size: 16px; cursor: pointer;" %>
        <%else%>
          <% if product.stock > 0 %>
            <%= button_to "Add to Cart", add_to_cart_path(product), method: :post,
                 style: "padding: 10px 16px; background-color: #3fff3f; color: white; border: none; border-radius: 5px; font-size: 16px; cursor: pointer;" %>
          <% else %>
            <button disabled style="padding: 10px 16px; background-color: grey; color: white; border: none; border-radius: 5px; font-size: 16px; cursor: pointer;">Out of Stock</button>
          <% end %>
        <%end%>
      </p>
    </div>
  <% end %>
</div>
