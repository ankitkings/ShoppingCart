<div style="max-width: 700px; margin: 0 auto; padding: 30px; border: 1px solid #ccc; border-radius: 8px; background-color: #fff; font-family: Arial, sans-serif; box-shadow: 2px 2px 10px rgba(0,0,0,0.1);">

  <h2 style="text-align: center; font-size: 28px; margin-bottom: 20px; color: #2c3e50;">Your Cart</h2>

  <% if @cart.cart_items.any? %>
    <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
      <thead>
        <tr style="background-color: #f4f4f4;">
          <th style="text-align: left; padding: 10px; border-bottom: 1px solid #ddd;">Product</th>
          <th style="text-align: center; padding: 10px; border-bottom: 1px solid #ddd;">Qty</th>
          <th style="text-align: right; padding: 10px; border-bottom: 1px solid #ddd;">Price</th>
          <th style="padding: 10px; border-bottom: 1px solid #ddd;"></th>
        </tr>
      </thead>
      <tbody>
        <% @cart.cart_items.each do |item| %>
          <tr>
            <td style="padding: 10px; border-bottom: 1px solid #eee;"><%= item.product.title %></td>
            <td style="padding: 10px; text-align: center; border-bottom: 1px solid #eee;"><%= item.quantity %></td>
            <td style="padding: 10px; text-align: right; border-bottom: 1px solid #eee;"><%= number_to_currency(item.product.price * item.quantity) %></td>
            <td style="padding: 10px; text-align: right; border-bottom: 1px solid #eee;">
              <%= button_to "Remove", remove_from_cart_path(item.product), method: :delete, data: { confirm: "Are you sure?" },
                    style: "background-color: #e74c3c; color: white; border: none; padding: 6px 12px; border-radius: 4px; cursor: pointer;" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div style="display: flex; justify-content: center; gap: 20px; margin-top: 30px;">
      <%= button_to "Checkout", orders_path, method: :post,
            style: "padding: 12px 20px; background-color: #2ecc71; color: white; font-size: 16px; border: none; border-radius: 5px; cursor: pointer;" %>

      <%= button_to "Add More", products_path, method: :get,
            style: "padding: 12px 20px; background-color: #3498db; color: white; font-size: 16px; border: none; border-radius: 5px; cursor: pointer;" %>
    </div>

  <% else %>
    <p style="text-align: center; color: #888; font-style: italic;">Your cart is empty.</p>

    <div style="text-align: center; margin-top: 20px;">
      <%= button_to "Add Items", products_path, method: :get,
            style: "padding: 12px 20px; background-color: #3498db; color: white; font-size: 16px; border: none; border-radius: 5px; cursor: pointer;" %>
    </div>
  <% end %>

</div>
