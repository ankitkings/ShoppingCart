<div style="max-width: 600px; margin: 0 auto; padding: 30px; border: 1px solid #ccc; border-radius: 8px; background-color: #fff; font-family: Arial, sans-serif; box-shadow: 2px 2px 10px rgba(0,0,0,0.1);">

  <h1 style="text-align: center; font-size: 28px; margin-bottom: 20px; color: #2c3e50;">Order Receipt</h1>

  <% if @order %>
    <p><strong>Order ID:</strong> <%= @order.id %></p>
    <p><strong>Status:</strong> <%= @order.status.capitalize %></p>
    <hr style="margin: 20px 0;">

    <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
      <thead>
        <tr style="background-color: #f9f9f9;">
          <th style="padding: 8px; border-bottom: 1px solid #ddd;">Product</th>
          <th style="padding: 8px; border-bottom: 1px solid #ddd;">Item per Price</th>
          <th style="padding: 8px; border-bottom: 1px solid #ddd; text-align: center;">Quantity</th>
          <th style="padding: 8px; border-bottom: 1px solid #ddd; text-align: center;">Total</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |item| %>
          <tr>
            <td style="padding: 8px; border-bottom: 1px solid #eee;"><%= item.product.title %></td>
            <td style="padding: 8px; text-align: center; border-bottom: 1px solid #eee;"><%= number_to_currency(item.product.price) %></td>
            <td style="padding: 8px; text-align: center; border-bottom: 1px solid #eee;"><%= item.quantity %></td>
            <td style="padding: 8px; text-align: center; border-bottom: 1px solid #eee;"><%= number_to_currency(item.product.price * item.quantity) %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="3" style="padding: 8px; font-weight: bold;">Total</td>
          <td style="padding: 8px; font-weight: bold; text-align: center;"><%= number_to_currency(@order.total_amount) %></td>
        </tr>
      </tfoot>
    </table>

    <!-- Buttons Section -->
    <div style="display: flex; justify-content: center; gap: 20px; margin-top: 30px;">
      <% if @order.status == "Delivered"%>
        <%= button_to "ðŸ“„ Download PDF Invoice", receipt_order_path(@order, format: :pdf), method: :get,
          style: "padding: 10px 16px; background-color: #2c3e50; color: white; border: none; border-radius: 5px; cursor: pointer;" %>
      <%end%>
      <% if current_user.admin? %>
        <%= button_to "Back to Orders", orders_path, method: :get,
              style: "padding: 10px 20px; background-color: #2ecc71; color: white; border: none; border-radius: 4px; font-size: 16px; cursor: pointer;" %> 
      <% else %>
        <%= button_to "Back to Products", products_path, method: :get,
              style: "padding: 10px 20px; background-color: #2ecc71; color: white; border: none; border-radius: 4px; font-size: 16px; cursor: pointer;" %>
      <% end %>
    </div>

    <!-- Status Dropdown for Admin -->
    <% if current_user.admin? %>
      <div style="margin-top: 30px; text-align: center;">
        <%= form_with url: update_status_order_path(@order), method: :patch, local: true do %>
          <label for="status" style="font-weight: bold; margin-right: 10px;">Update Status:</label>
          <%= select_tag :status, options_for_select(Order::STATUSES, @order.status),
                onchange: "this.form.submit();", disabled: @order.status == "Delivered",
                style: "padding: 10px 16px; font-size: 16px; border-radius: 5px; border: 1px solid #ccc;" %>
        <% end %>
      </div>
    <% end %>

  <% else %>
    <p style="color: #888; font-style: italic; text-align: center;">Your cart is empty.</p>
  <% end %>
</div>
