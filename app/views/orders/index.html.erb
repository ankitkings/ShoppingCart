<div style="max-width: 1000px; margin: 0 auto; padding: 30px;">
  <% head_text = current_user.admin? ? "List of Orders" : "My Orders" %>
  <h1 style="font-size: 28px; color: #2c3e50; margin-bottom: 30px;">ðŸ§¾ <%= head_text %></h1>

  <% if @orders.any? %>
    <table style="width: 100%; border-collapse: collapse; font-family: Arial, sans-serif;">
      <thead>
        <tr style="background-color: #f5f5f5;">
          <th style="padding: 12px; border-bottom: 1px solid #ddd; text-align: start;">Order ID</th>
          <th style="padding: 12px; border-bottom: 1px solid #ddd; text-align: start;">Date</th>
          <th style="padding: 12px; border-bottom: 1px solid #ddd; text-align: start;">Status</th>
          <th style="padding: 12px; border-bottom: 1px solid #ddd; text-align: start;">Total</th>
          <th style="padding: 12px; border-bottom: 1px solid #ddd; text-align: start;">Order By</th>
          <th style="padding: 12px; border-bottom: 1px solid #ddd; text-align: center;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td style="padding: 10px; border-bottom: 1px solid #eee;"><%= order.id %></td>
            <td style="padding: 10px; border-bottom: 1px solid #eee;"><%= order.created_at.strftime("%d %b %Y") %></td>
            <td style="padding: 10px; border-bottom: 1px solid #eee;"><%= order.status.capitalize %></td>
            <td style="padding: 10px; border-bottom: 1px solid #eee;"><%= number_to_currency(order.total_amount) %></td>
            <td style="padding: 10px; border-bottom: 1px solid #eee;"><%= order.user.full_name %></td>
            <td style="padding: 10px; border-bottom: 1px solid #eee; text-align: center;">
              <%= link_to "View", order_path(order), 
                  style: "padding: 6px 12px; background-color: #3498db; color: white; border-radius: 4px; text-decoration: none; margin-right: 10px;" %>

              <% if order.status == "Delivered" %>
                <%= link_to "ðŸ“„ Download", receipt_order_path(order, format: :pdf),
                    style: "padding: 6px 12px; background-color: #2ecc71; color: white; border-radius: 4px; text-decoration: none;" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p style="text-align: center; color: #888;">You haven't placed any orders yet.</p>
  <% end %>
</div>
