<h2 style="color: #2c3e50;">ğŸ—¨ï¸ Chat with Support</h2>

<div id="chat-room-messages"
     data-chat-room-id="<%= @chat_room.id %>"
     style="max-height: 400px; overflow-y: auto; background: #fff; padding: 15px; border: 1px solid #ddd; border-radius: 8px; margin-bottom: 20px;">
  <%= render partial: 'messages/message', collection: @messages %>
</div>

<%= form_with model: [@chat_room, Message.new], local: true do |f| %>
  <div style="display: flex; gap: 10px;">
    <%= f.text_field :content, placeholder: "Type a message...", style: "flex: 1; padding: 10px;" %>
    <%= f.submit "Send", style: "padding: 10px 20px; background-color: #3498db; color: white; border: none; border-radius: 4px;" %>
  </div>
<% end %>
